<h1 class="text-2xl font-semibold mb-6">Edit Item</h1>
<form method="POST" action="/admin/items/<%= item.id %>" class="grid gap-3 max-w-2xl">
<input name="name" value="<%= item.name %>" class="border rounded px-3 py-2" required>
<textarea name="description" class="border rounded px-3 py-2"><%= item.description %></textarea>
<input name="image_url" value="<%= item.image_url %>" class="border rounded px-3 py-2">
<input name="price_cents" value="<%= item.price_cents %>" class="border rounded px-3 py-2">
<input name="purchase_link" value="<%= item.purchase_link %>" class="border rounded px-3 py-2">
<label class="text-sm">Status
<select name="status" class="border rounded px-3 py-2 ml-2">
<option <%= item.status==='available'?'selected':'' %> value="available">available</option>
<option <%= item.status==='claimed'?'selected':'' %> value="claimed">claimed</option>
<option <%= item.status==='purchased'?'selected':'' %> value="purchased">purchased</option>
</select>
</label>
<div>
<div class="text-sm mb-1">Categories</div>
<div class="flex flex-wrap gap-2">
<% categories.forEach(c => { %>
<label class="inline-flex items-center gap-2 border rounded px-2 py-1">
<input type="checkbox" name="category_ids" value="<%= c.id %>" <%= selected.has(c.id)?'checked':'' %> > <%= c.name %>
</label>
<% }) %>
</div>
</div>
<button class="px-4 py-2 rounded-lg bg-emerald-600 text-white">Save Changes</button>
</form>